<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>net461</TargetFramework>
        <GenerateAssemblyInfo>false</GenerateAssemblyInfo>

        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>

        <ImportDirectoryTargetsForCrossTargeting>true</ImportDirectoryTargetsForCrossTargeting>
    </PropertyGroup>
    <PropertyGroup>
        <PackageVersion>0.1.38.2-alpha</PackageVersion>
    </PropertyGroup>
    <ItemGroup>
        <Reference Include="OpenTK, Version=3.0.0.0, Culture=neutral, PublicKeyToken=bad199fe84eb3df4">
            <HintPath>libs\OpenTK.dll</HintPath>
        </Reference>
        <PackageReference Include="NVorbis" Version="0.8.6" />
        <PackageReference Include="LitGit" Version="0.1.0.15-alpha" PrivateAssets="all" />
        <PackageReference Include="System.Runtime.CompilerServices.Unsafe" Version="4.5.2" />
    </ItemGroup>
    <ItemGroup>
        <None Remove="engenious.Nuget.props.template" />
        <LitGitTemplateReference Include="engenious.Nuget.props.template" />
        <None Remove="engenious.Solution.cs.template" />
        <LitGitTemplateReference Include="engenious.Solution.cs.template" />
        
        <None Update="engenious.Nuget.props" Condition="Exists('engenious.Nuget.props')">
            <DependentUpon>engenious.Nuget.props.template</DependentUpon>
        </None>
        <Compile Update="engenious.Solution.cs" Condition="Exists('engenious.Solution.cs')">
            <DependentUpon>engenious.Solution.cs.template</DependentUpon>
        </Compile>
    </ItemGroup>
    <Import Project="engenious.Nuget.props" Condition="Exists('engenious.Nuget.props')" />
</Project>